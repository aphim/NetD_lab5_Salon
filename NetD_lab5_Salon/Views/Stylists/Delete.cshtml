@model NetD_lab5_Salon.Models.Stylist

@{
    ViewData["Title"] = "Delete";
}

<!--Generates the page for the confirmation for deleting a stylist-->
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Stylist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.stylistFName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.stylistFName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.stylistLName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.stylistLName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.stylistExt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.stylistExt)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="stylistID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
